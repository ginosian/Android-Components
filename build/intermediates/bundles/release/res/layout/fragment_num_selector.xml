<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        android:gravity="center_horizontal"
        android:text="@string/info.message.pieces"
        android:textSize="@dimen/font_larger" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/minus_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height_normal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_normal"
        android:text="@string/button.name.minus" />

    <NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/plus_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height_normal"
        android:layout_gravity="center_horizontal"
        android:text="@string/button.name.plus" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/apply_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_tall"
        android:layout_margin="@dimen/spacing_normal"
        android:text="@string/button.name.apply" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/cancel_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_tall"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginRight="@dimen/spacing_normal"
        android:text="@string/button.name.cancel" />
</LinearLayout>